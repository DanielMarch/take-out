  #user= user.email

  form#order
    input(type='number', name='qty')
    select.menu(name='menu')
      option(value='') Select a Menu
        each menu in menus
          option= menu
    select(name='dish')
      option(value='') Select a Dish

  div
    button#add Add Row

block scripts
